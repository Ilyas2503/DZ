<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/rsk_ET"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_ed"
        android:drawableStart="@drawable/ic_post"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:hint="@string/rsk"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/theme_ET"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_ed"
        android:drawableStart="@drawable/ic_notes"
        android:gravity="center"
        android:hint="@string/theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rsk_ET"/>

    <EditText
        android:id="@+id/mes_id"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:hint=""
        android:gravity="center"
        android:background="@drawable/bg_mes"
        android:drawableStart="@drawable/ic_message"
        app:layout_constraintTop_toBottomOf="@id/theme_ET"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />


    <Button
        android:id="@+id/camera_btn"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="@string/camera"
        app:layout_constraintTop_toBottomOf="@id/mes_id"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        android:background="@drawable/btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/next_bt"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="@string/next"
        android:background="@drawable/btn"
        app:layout_constraintTop_toBottomOf="@id/camera_btn"
        android:layout_marginTop="120dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>